{{ set(this, 'title', "Quizzes") }}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">Available Quizzes</h1>
        </div>
    </div>
    {% if quizzes is empty %}
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <p class="card-text text-center">No quizzes available at the moment.</p>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="row">
            {% for quiz in quizzes %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ quiz.name }}</h5>
                            <p class="card-text">{{ quiz.description }}</p>
                            <p class="card-text">Questions: {{ quiz.questions|length }}</p>
                            <p class="card-text">Time: {{ quiz.duration }} minutes</p>
                            <a href="/quizzes/{{ quiz.id }}/start" class="btn btn-primary">Take Quiz</a>
                            <p class="card-text"><small class="text-muted">Ends {{ quiz.expires_at }}</small></p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>