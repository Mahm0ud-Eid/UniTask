{{ set(this, 'title', "Study Materials") }}

<div class="container">
    <div class="row">
        <h1>Subjects</h1>
        <hr>
    </div>
    <div class="row d-flex justify-content-evenly">
        {% for subject in subjects %}
            <div class="col-md-6 col-lg-4">
                <a class="btn btn-link d-flex justify-content-center align-items-center" data-bs-toggle="collapse" href="#Material-{{ subject.id }}" role="button" aria-expanded="false" aria-controls="{{ subject.id }}">
                    <i class="fa fa-folder fa-3x"></i>
                    <span class="display-6 font-weight-bold">{{ subject.name }}</span>
                </a>
                <div class="collapse" id="Material-{{ subject.id }}">
                    {% if subject.materials|length == 0 %}
                        <div class="row">
                            <div class="col-12">
                                <h3 class="text-center">No materials yet</h3>
                            </div>
                        </div>
                    {% else %}
                    <div class="row">
                        <div class="col-12">
                            <div class="card my-auto border border-primary">
                                <div class="card-body">
                                    <div class="col-12 d-flex justify-content-center">
                                        <a href="/materials/{{ subject.id }}/download-subject" class="btn btn-primary"><i class="fa fa-download"></i> Download All</a>
                                    </div>
                                    <ul class="list-group list-group-flush">
                                        {% for material in materials %}
                                            {% if material.subject_id == subject.id %}
                                                <li class="list-group-item">
                                                    <div class="row">
                                                        <div class="col-9">
                                                            <a href="/materials/{{ subject.id }}/view/{{ material.id }}">{{ material.title }}</a>
                                                        </div>
                                                        <div class="col-3 d-flex justify-content-end">
                                                            <a href="/materials/{{ subject.id }}/download-lecture/{{ material.id }}" class="badge badge-primary"><i class="fa fa-download"></i></a>
                                                        </div>
                                                    </div>
                                                </li>
                                            {% endif %}
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
</div>
